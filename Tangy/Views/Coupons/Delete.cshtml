@model Tangy.Models.Coupon

@{
    ViewData["Title"] = "Delete";
}

<br />
<h2>Delete Coupon</h2>
<br />

<form asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="row container form-border">
        <br />
        <div class="col-12 border">
            @{
                var base64Image = Convert.ToBase64String(Model.Picture);
                var base64ImageFormatted = $"data:image/jpg;base64,{base64Image}";
            }
            <img src="@base64ImageFormatted" height="55px" width="100%"/>
        </div>
        <div class="col-6">

            <input hidden asp-for="Id"/>
            <fieldset disabled>
                <br/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control"/>
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Picture" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input type="file" id="projectImage" name="files" multiple class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Type" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Type" asp-items="Html.GetEnumSelectList<Coupon.CouponType>()" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Discount" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Discount" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MinimumAmount" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MinimumAmount" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="IsActive" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input type="checkbox" asp-for="IsActive" class="form-control"/>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="col-12" style="padding-top: 10px;">
            <input type="submit" value="Delete" asp-route-id="@Model.Id" class="btn btn-danger"/>
            <a asp-action="Index" class="btn btn-success">Back To List</a>
        </div>
    </div>
</form>


