@model IEnumerable<MenuItem>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


@if (Model.Any())
{
    foreach (var menuItem in Model)
    {
        <div class="border border-info rounded col-12" style="margin-top: 10px; margin-bottom: 10px; padding: 10px;">
            <div class="row">
                <div class="col-9">
                    <div class="row">
                        <div class="col-10">
                            <label class="text-primary" style="font-size: 21px; color: maroon;">@menuItem.Name</label>
                            <br />
                            <label class="badge badge-primary">@menuItem.SubCategory.Name</label>

                            @if (int.Parse(menuItem.Spicyness) != (int)MenuItem.SpicyLevel.NotApplicable)
                            {
                                <label class="badge badge-info">@Enum.GetName(typeof(MenuItem.SpicyLevel), int.Parse(menuItem.Spicyness))</label>
                            }
                        </div>
                        <div class="col-2 text-right" style="color:maroon">
                            <h4>$@menuItem.Price</h4>
                        </div>
                    </div>
                    <div class="row col-12 text-justify">
                        <p>@menuItem.Description</p>
                        <br />
                        <a asp-action="Details" asp-route-id="@menuItem.Id" class="btn btn-success">Details</a>
                    </div>
                </div>
                <div class="col-3">
                    <img src="@menuItem.Image" width="90%" style="border-radius: 5px; border: 1px solid #bbb9b9;" />
                </div>
            </div>
        </div>
    }
}