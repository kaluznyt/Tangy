@model Tangy.Models.SubCategory
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2>Delete</h2>
<br />

<form asp-action="Delete" method="post">
    <div class="form-border">
        <input type="hidden" asp-for="Id" />
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Name" class="form-control"></input>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Category.Name" class="custom-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Category.Name" class="form-control"></input>
                </div>
            </div>
        </fieldset>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete" onclick="return confirm('Are you sure ?')" />
            <a asp-action="Index" asp-route-id="@Model.Id" class="btn btn-success">Back To List</a>
        </div>
    </div>
</form>
