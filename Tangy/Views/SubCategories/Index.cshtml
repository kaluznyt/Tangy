@model IEnumerable<Tangy.Models.SubCategory>
@{
    ViewData["Title"] = "Index";
}

<br />
<h2>Index</h2>
<br />

<partial name="_CreateButtonPartial" />

<div class="form-border">

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Category.Name)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <td>@Html.DisplayFor(m => item.Category.Name)</td>
                <td><partial name="_TableButtonPartial" model="@item.Id"/></td>
                <td></td>
            </tr>
        }
    </table>
</div>